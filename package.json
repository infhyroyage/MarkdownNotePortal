{
  "name": "mkmemoportal-lambdas",
  "version": "1.0.0",
  "description": "Lambda functions for Markdown Memo Portal",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage --coverageThreshold='{\"global\":{\"lines\":80,\"branches\":80,\"functions\":80,\"statements\":80}}'",
    "test:watch": "jest --watch",
    "lint": "eslint lambdas/**/*.js"
  },
  "keywords": [
    "lambda",
    "dynamodb",
    "api-gateway"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.709.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "eslint": "^9.17.0",
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "lambdas/**/*.js",
      "!lambdas/tests/**"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ],
    "moduleNameMapper": {
      "^/opt/nodejs/(.*)$": "<rootDir>/lambdas/layer/nodejs/$1"
    }
  }
}
